<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/one"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.xuexing.MainActivity">

    <EditText
        android:id="@+id/cc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/the"
        android:gravity="center"/>

    <TextView
        android:id="@+id/qq"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/cc"
        android:gravity="center"
        android:text="+"
        android:textColor="#e811e1"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/ww"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/qq"
        android:layout_toRightOf="@+id/qq"
        android:background="@drawable/the"
        android:gravity="center"/>

    <Button
        android:id="@+id/zz"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/ww"
        android:layout_toRightOf="@+id/ww"
        android:background="#f5dd08"
        android:text="="
        android:textSize="40sp" />


</RelativeLayout>
